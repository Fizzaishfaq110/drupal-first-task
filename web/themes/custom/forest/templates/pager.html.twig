{% if items %}
  <nav class="mui-pagination" role="navigation" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pager__items">
      {% for key, item in items %}
        <li class="pager__item{{ current == key ? ' is-active' : '' }}">
          {% if item.href %}
            <a href="{{ item.href }}"{{ item.attributes }}>
              {{ item.text }}
            </a>
          {% else %}
            <span>{{ item.text }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}